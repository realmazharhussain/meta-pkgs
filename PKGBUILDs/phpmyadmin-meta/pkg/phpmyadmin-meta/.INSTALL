post_install() {
   conf_file=/etc/php/php.ini
   sed -E\
      -e '/;extension=iconv/s|^;||'\
      -e '/;extension=bz2/s|^;||'\
      -e '/;extension=zip/s|^;||'\
      -i $conf_file

   {
      echo -e '# phpMyAdmin Stuff'
      echo 'Include conf/extra/phpmyadmin.conf'
   } >> $conf_file

   systemctl restart httpd.service
}
pre_remove() {
   sed -E\
      -e '/^extension=iconv/s|^|;|'\
      -e '/^extension=bz2/s|^|;|'\
      -e '/^extension=zip/s|^|;|'\
      -e '/# phpMyAdmin Stuff/d'\
      -e '/Include conf/extra/phpmyadmin.conf/d'\
      -i /etc/php/php.ini

   systemctl restart httpd.service
}
